<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab.DiemFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbDiem"
            android:stretchColumns="0,1,2,3,4,5,6">

            <TableRow android:layout_width="match_parent"
                android:id="@+id/rowDiem"
                android:background="#cbd1d4">

                <TextView
                    android:padding="3dip"
                    android:layout_width="120dp"
                    android:text="Môn học"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dip"
                    android:text="Miệng"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dip"
                    android:text="15P"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dip"
                    android:text="60P"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dip"
                    android:text="Giữa Kỳ"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dip"
                    android:text="Cuối Kỳ"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dip"
                    android:text="TB"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điểm trung bình"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xếp loại"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.8">
                <TextView
                    android:id="@+id/txtDiemTrungBinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Điểm đưa vào">
                </TextView>
                <TextView
                    android:id="@+id/txtXepLoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Xếp loại">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>